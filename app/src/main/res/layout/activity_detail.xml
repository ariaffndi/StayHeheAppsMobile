<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    >

    <ImageView
        android:id="@+id/imageTop"
        android:src="@drawable/vila1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest House"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="start"
                />

            <ImageView
                android:src="@drawable/star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="-120dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7/5 - 578 ratings"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="end"
                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wooden Hut"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_border"
            >

        <ImageView
            android:src="@drawable/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magelang"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Jl. Suwanting, Suwanting, Banyuroto, Kec. Sawangan, Kabupaten Magelang ..."
                android:textSize="15sp"
                android:textColor="@color/primary"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="See All Nearby Landmarks >"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/primary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Stay Dates"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#fffff"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/button_border"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Nov (2.00 PM)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Early Check-In Available"
                android:textSize="12sp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know More"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="1 Night(s)"
            android:textSize="12sp"
            android:textColor="@color/primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/button_border"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26 Nov (12.00 PM)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Late Check-Out Available"
                android:textSize="12sp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know More"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facilities"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#fffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="- Free Toiletries"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:layout_weight="1"
            android:gravity="start"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="- Reception"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:layout_weight="1"
            android:gravity="start"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="- Clean Washroom"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="start"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="- Wifi"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="start"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="- TV"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="start"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="- Mineral Water"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="start"
                />
        </LinearLayout>

    </LinearLayout>

    <!--navigation-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center"
        android:background="#F1F3F5"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 2,000,000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for 1 Night (tax include)"
                android:textSize="15sp"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            >

            <Button
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/primary"
                android:text="Book Now"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
